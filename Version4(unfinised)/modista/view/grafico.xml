<?xml version="1.0" encoding="utf-8"?>
 <odoo>
  <data>
   <record model="ir.ui.view" id="view_modista_grafico_form">


			<field name="name">view.modista.graph.form</field>
			<field name="model">modista.grafico</field>
			<field name="arch" type="xml"> <!--Importantisimo ponerlo-->
				<form string="grafico form">
					<header>
                    <!--oe_highlight para darle color al fondo del boton -->
                		<button name="Prueba" type="object" string="Prueba" class="oe_highlight"/>
							 			
            		</header>					
					<sheet>
					<h2>Prueba</h2>
					<div>

						 <field name="gasto"/>
						 <field name="descripcion"/>

            	 		 <field name="beneficio"/>
					</div>
					
                        
						</sheet>
				</form>
			</field>
		</record>

		<!--Vista tree-->
    	<record model="ir.ui.view" id="view_modista_grafico_tree">
			<field name="name">view.modista.graph.tree</field>
			<field name="model">modista.grafico</field>
			<field name="arch" type="xml">
            <!--Nombre de los campos y orden en los que va aparecer-->
				<tree string="Lista Pedidos">
				 <field name="gasto"/>
            	 <field name="beneficio"/>
				</tree>
			</field>
   		</record>
        <!-- Vista de grÃ¡fico-->
		<record id="view_modista_grafico_graph" model="ir.ui.view">
   		 <field name="name">view.modista.graph</field>
   		 <field name="model">modista.grafico</field>
   		 <field name="arch" type="xml">
       		 <graph type="bar">
           	 	          		 
           		 <field name="gasto" type="meansure" />
            	 <field name="beneficio" type="measure" />
       		 </graph>
   		 </field>
		</record>

          <!-- Encabezado de la ventana principal en la que tenemos el titulo de Control de clientes  TEST-->
		<record model="ir.actions.act_window" id="beneficios">
			<field name="name">Beneficios</field>
			<field name="res_model">modista.grafico</field>
			<field name="view_mode">graph,tree,form</field>
		</record>
  </data>
 </odoo>